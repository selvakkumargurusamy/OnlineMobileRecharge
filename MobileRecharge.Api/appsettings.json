{
  "AppSettings": {
    "MaxBeneficiaryPerUser": 5,
    "MaxRechargePerMonthForUser": 3000,
    "MaxRechargePerMonthPerVerifiedUser": 1000,
    "MaxRechargePerMonthPerUnVerifiedUser": 500,
    "AllowedRechargePlans": [ 5, 10, 20, 30, 50, 75, 100 ]
  },
  "ConnectionStrings": {
    "AppDbContext": "Data Source=localhost;Initial Catalog=MobileRechargeDb;Integrated Security=True;TrustServerCertificate=True;ApplicationIntent=ReadWrite;MultiSubnetFailover=False"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Keycloak": {
    "server-url": "http://localhost:8080",
    "audience": "myclient",
    "name_claim": "preferred_username",
    "validate-issuer": false,
    "require-https": false
  },
  "AllowedHosts": "*"
}
